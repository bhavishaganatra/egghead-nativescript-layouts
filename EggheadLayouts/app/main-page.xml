<Page 
    xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Egghead Layouts" class="action-bar"></ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <Button text="Stack Layout" tap="{{ goToStack }}" class="btn btn-primary btn-active"/>
        <Button text="Absolute Layout" tap="{{ goToAbsolute }}" class="btn btn-primary btn-active"/>
        <Button text="Wrap Layout" tap="{{ goToWrap }}" class="btn btn-primary btn-active"/>
        <Button text="Grid Layout" tap="{{ goToGrid }}" class="btn btn-primary btn-active"/>
        <Button text="Flex Layout" tap="{{ goToFlex }}" class="btn btn-primary btn-active"/>
        <Button text="Dock Layout" tap="{{ goToDock }}" class="btn btn-primary btn-active"/>
    </StackLayout>
</Page>